								$(".step1,.step3").css({'color':'black' ,'box-shadow':'0px 3px 15px rgba(0,0,0,.4), inset 0px 1px 0px rgba(255,255,255,.3), inset 0px 0px 3px rgba(255,255,255,.5)'});
							  
						    });
							  
							  
							  
							    $(".step3").click(function(){ 
						  			
									  $(".Stp1,.Stp2,.Stp3,.Stp4,.Content00").hide();
						  			  $(".Content3_1,.Step2,.Step3").show();
									   $(".SpaceBarDiv").hide();
									   
